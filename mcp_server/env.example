# OpenShift Cluster Configuration
# OpenShift cluster URL (e.g., https://api.your-cluster.com:6443)
OPENSHIFT_CLUSTER_URL=https://your-cluster.example.com:6443

# OpenShift authentication token
# You can get this from the OpenShift web console or using: oc whoami -t
OPENSHIFT_TOKEN=your-openshift-token-here

# Optional: Enable SSL verification (set to false for self-signed certificates or if you encounter SSL errors)
OPENSHIFT_VERIFY_SSL=true

# LLM Integration Configuration
# Google Gemini (Default Provider)
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-flash
GEMINI_MAX_TOKENS=2048
GEMINI_TEMPERATURE=0.7

