# OpenShift Cluster Configuration
# Copy this file to .env and fill in your actual values

# OpenShift cluster URL (e.g., https://api.cluster.example.com:6443)
OPENSHIFT_CLUSTER_URL=https://your-cluster.example.com

# OpenShift authentication token
# You can get this from the OpenShift web console or using: oc whoami -t
OPENSHIFT_TOKEN=your-openshift-token-here

# Optional: Enable SSL verification (set to false for self-signed certificates)
# VERIFY_SSL=false 